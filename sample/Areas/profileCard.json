{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.0",
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "person",
                            "url": "{photoUrl}",
                            "size": "small"
                        }
                    ],
                    "width": "auto"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "bolder",
                            "text": "{name}",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "none",
                            "text": "{title}",
                            "isSubtle": true,
                            "wrap": true
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "FactSet",
            "facts": [
                {
                    "title": "Email:",
                    "value": "{mail}"
                },
                {
                    "title": "Mobile:",
                    "value": "{mobilePhone}"
                },
                {
                    "title": "UserId:",
                    "value": "{id}"
                }
            ]
        }
    ]
}